<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#8CF1F1F4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="303dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textViewAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/work_sans_semibold"
                android:text="Account"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


            <Button
                android:id="@+id/signOutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="30dp"
                android:text="Sign out"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintTop_toBottomOf="@+id/ACCOUNT_CARD" />

    <ImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/ic_settings_svg"
        android:background="@android:color/transparent"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="18dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilePicAccount"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="140dp"
        android:background="@drawable/profile_background"
        android:src="@drawable/ic_account"
        tools:layout_editor_absoluteY="165dp"
        app:layout_constraintTop_toBottomOf="@id/textViewAC"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/USERNAME_ACCOUNT_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="299dp"
        app:layout_constraintTop_toBottomOf="@id/textViewAC"
        app:layout_constraintStart_toStartOf="parent" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ACCOUNT_CARD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginStart="18dp"
                app:cardCornerRadius="6dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintTop_toBottomOf="@+id/profilePicAccount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.Material3.CardView.Outlined">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/account_RV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    tools:layout_editor_absoluteX="275dp"
                    tools:layout_editor_absoluteY="66dp" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>